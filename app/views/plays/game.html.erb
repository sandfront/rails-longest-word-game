<div class="container text-center">
  <h2>Welcome to the longest word-game</h2>
  <h3>Here is your grid:</h3>
  <%= @grid %>

  <form action="/score">
  <label for="question">What's your best shot?</label>
  <input type="text" id="question" name="guess" placeholder="Enter your word">
  <input type="hidden" name="grid" value="<%= @grid %>">
  <input type="hidden" name="start_time" value="<%= @start_time %>">
  <input type="submit" value="Play!">
</form>
</div>
